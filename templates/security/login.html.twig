{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
                </div>
            {% endif %}

            <h1 class="h3 mb-3 font-weight-normal d-flex justify-content-center body-text-color">Connectez-vous</h1>
            <label class = "d-flex justify-content-center body-text-color" for="username">Email</label>
            <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control my-3" autocomplete="email" required autofocus>
            <label class = "d-flex justify-content-center body-text-color" for="password">Mot de Passe</label>
            <input type="password" name="_password" id="password" class="form-control my-3" autocomplete="current-password" required>
            <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html
            #}
                <div class="checkbox mb-3">
                    <input type="checkbox" name="_remember_me" id="_remember_me">
                    <label for="_remember_me " class ="body-text-color  ">Se Souvenir de mes identifiants</label>
                </div>
            

            <button class="btn btn-lg d-flex col-2 justify-content-center my-3 button" type="submit">
                Connexion
            </button>
        </form>
    </div>
{% endblock %}
